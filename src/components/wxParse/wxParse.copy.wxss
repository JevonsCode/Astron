.wxParse{
    margin: 0 5px!important;
    font-family: Helvetica,sans-serif!important;
    font-size: 28rpx!important;
    color: #666!important;
    line-height: 1.8!important;
}
view{
    word-break:break-all!important; overflow:auto!important;
}
.wxParse-inline{
    display: inline!important;
    margin: 0!important;
    padding: 0!important;
}
/*//标题 */
