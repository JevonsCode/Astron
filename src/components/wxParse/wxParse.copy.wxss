}
.wxParse-td:last{
	border-top:1px solid #e0e0e0!important;
}
.wxParse-th{
	background:#f0f0f0!important;
	border-top:1px solid #e0e0e0!important;
}
.wxParse-del{
    display: inline!important;
}
.wxParse-figure {
  overflow: hidden!important;
}
