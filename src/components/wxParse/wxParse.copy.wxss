.wxParse-h1 {
  font-size: 18px!important;
  font-weight: 400!important;
  margin-bottom: .9em!important;
}
.wxParse-h2 {
  font-size: 16px!important;
  font-weight: 400!important;
  margin-bottom: .34em!important;
}
.wxParse-h3 {
  font-weight: 400!important;
  font-size: 15px!important;
  margin-bottom: .34em!important;
}
.wxParse-h4 {
  font-weight: 400!important;
  font-size: 14px!important;
  margin-bottom: .24em!important;
}
.wxParse-h5 {
  font-weight: 400!important;
  font-size: 13px!important;
  margin-bottom: .14em!important;
}
.wxParse-h6 {
  font-weight: 400!important;
  font-size: 12px!important;
  margin-bottom: .04em!important;
}

.wxParse-h1, .wxParse-h2, .wxParse-h3, .wxParse-h4, .wxParse-h5, .wxParse-h6, .wxParse-b, .wxParse-strong  { font-weight: bolder!important }

.wxParse-i,.wxParse-cite,.wxParse-em,.wxParse-var,.wxParse-address{font-style:italic!important}
.wxParse-pre,.wxParse-tt,.wxParse-code,.wxParse-kbd,.wxParse-samp{font-family:monospace!important}
.wxParse-pre{white-space:pre!important}
.wxParse-big{font-size:1.17em!important}
.wxParse-small,.wxParse-sub,.wxParse-sup{font-size:.83em!important}
.wxParse-sub{vertical-align:sub!important}
.wxParse-sup{vertical-align:super!important}
.wxParse-s,.wxParse-strike,.wxParse-del{text-decoration:line-through!important}
/*wxparse-自定义个性化的css样式*/
/*增加video的css样式*/
.wxParse-strong,.wxParse-s{display: inline!important}
.wxParse-a{
    color: deepskyblue!important;
    word-break:break-all!important;
    overflow:auto!important;
}

.wxParse-video{
    text-align: center!important;
    margin: 10px 0!important;
}

.wxParse-video-video{
    width:100%!important;
}

.wxParse-img{
    /*background-color: #efefef;*/
    overflow: hidden!important;
}

.wxParse-blockquote {
    margin: 0!important;
    padding:10px 0 10px 5px!important;
    font-family:Courier, Calibri,"宋体"!important;
    background:#f5f5f5!important;
    border-left: 3px solid #dbdbdb!important;
}

.wxParse-code,.wxParse-wxxxcode-style{
    display: inline!important;
    background:#f5f5f5!important;
}
.wxParse-ul{
    margin: 20rpx 10rpx!important;
}

.wxParse-li,.wxParse-li-inner{
    display: flex!important;
    align-items: baseline!important;
    margin: 10rpx 0!important;
}
.wxParse-li-text{
    
    align-items: center!important;
    line-height: 20px!important;
}

.wxParse-li-circle{
    display: inline-flex;
    width: 5px!important;
    height: 5px!important;
    background-color: #333!important;
    margin-right: 5px!important;
}

.wxParse-li-square{
    display: inline-flex!important;
    width: 10rpx!important;
    height: 10rpx!important;
    background-color: #333!important;
    margin-right: 5px!important;
}
.wxParse-li-ring{
    display: inline-flex!important;
    width: 10rpx!important;
    height: 10rpx!important;
    border: 2rpx solid #333!important;
    border-radius: 50%!important;
    background-color: #fff!important;
    margin-right: 5px!important;
}

